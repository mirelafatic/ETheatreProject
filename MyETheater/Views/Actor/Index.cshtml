
@{
    Layout = "~/Views/Shared/_Layout1.cshtml";
}


<!-- mogu jos: RemoveActor, -->

<style>
    .container > div {
        display: flex;
        padding-top: 10px;
        padding-bottom: 10px;
    }
</style>


<div style="padding-bottom:10px">
    <h1>Actors</h1>
</div>

<div class="container"  <div class="container" style="background-color: rgb(73, 1, 13); border-radius: 0.5rem 0.5rem 0px 0px; --darkreader-inline-bgcolor: #69424a;">
    <div style="padding-right:10px">
        <a id="map" class="btn" href="/Map/Create" style="background-color:black">Match Actor and Play</a>
    </div>

    <div style="padding-right:10px">
        <a id="addactor" class="btn" href="/Actor/Create" style="background-color: black;">
            Add actor
        </a>
    </div>

    <div style="padding-right:10px">
        <a id="removeactor" class="btn" href="/Actor/DeleteActor" style="background-color: black;">
            Remove Actor
        </a>
    </div>
</div>

<div style="background-color: rgb(73, 1, 13); border-radius: 0px 0px 0.5rem 0.5rem; --darkreader-inline-bgcolor: #69424a; ">
      <table class="table table-striped table-hover table-responsive table-dark table">
           <tr>
                <th>ActorName</th>
                <th>Plays</th>
                     </tr>
                     @foreach (var item in ViewBag.Dict.Keys)
                     {
                        <tr>
                        <td>@item</td>
                        <td>
                        @foreach (var itemm in ViewBag.Dict[@item])
                         {
                         <p>@itemm</p>
                         }
                          </td>
                          </tr>
                      }



      </table>
</div>
<script src="~/Scripts/custom/actor/index.js"></script>
<script src="~/Scripts/custom/actor/index2.js"></script>

@section footer{
    <footer style="position:fixed; bottom:0;">
        &copy; MyETheatre 2022 - Actor Page
    </footer>
}

