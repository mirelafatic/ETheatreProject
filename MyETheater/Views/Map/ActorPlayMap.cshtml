
@model  MyETheatre.Repository.Models.DB.ActorPlayMapModel
@{
    Layout = "~/Views/Shared/_Layout1.cshtml";
}

<section class="w-100 p-4 p-xl-5" style="background-color: rgb(73, 1, 13); border-radius: 0.5rem 0.5rem 0.5rem 0.5rem; --darkreader-inline-bgcolor: #69424a; " data-darkreader-inline-bgcolor="">
    <div>

        <h1> Match Play With Actors </h1>

        @using (@Html.BeginForm("Store", "Map", FormMethod.Post))
        {
            if (@Model != null)
            {
                @Html.HiddenFor(m => m.ActorPlayMapID)
            }

            <div class="form-group">
                <label>Chose Play:</label>
                @Html.DropDownListFor(m => m.PlayID,
                              new SelectList(ViewBag.Plays, "PlayID", "PlayName"),
                              new { @class = "form-control" }
                           )
            </div>

            <div class="form-group" style="margin-top:5px;">
                <label>Chose Actor:</label>
                @Html.DropDownListFor(m => m.ActorID,
                              new SelectList(ViewBag.Actors, "ActorID", "ActorName"),
                              new { @class = "form-control" }
                           )
            </div>
            <br />
            <button type="submit" class="btn" style="margin-top:5px; background-color:black">
                Save
            </button>

        }

    </div>
</section>


    @section footer{
        <footer style="position:fixed; bottom:0;">
            &copy; MyETheatre 2022 - Theatre ActorPlayMap
        </footer>
    }

