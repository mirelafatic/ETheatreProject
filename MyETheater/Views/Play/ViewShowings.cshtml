@model  MyETheatre.Repository.Models.DB.ShowingModel
@{
    Layout = "~/Views/Shared/_Layout1.cshtml";
}

<style>
    .container > div {
        display: flex;
        padding-top: 10px;
        padding-bottom: 10px;
    }
</style>


<div style="padding-bottom:10px">
    <h1>Showings</h1>
</div>

<div class="container"  <div class="container" style="background-color: rgb(73, 1, 13); border-radius: 0.5rem 0.5rem 0px 0px; --darkreader-inline-bgcolor: #69424a;">
    <div style="padding-right:10px">
        <a id="map" class="btn" href="/Showing/Create" style="background-color:black">Add Showing</a>
    </div>
</div>

<div style="background-color: rgb(73, 1, 13); border-radius: 0px 0px 0.5rem 0.5rem; --darkreader-inline-bgcolor: #69424a; ">
    <table class="table table-striped table-hover table-responsive table-dark table">
        <tr>
            <th>Date</th>
            <th>Number of free seats in hall</th>
            <th>Price (EUR)</th>
            <th></th>
            <th></th>
        </tr>
        @foreach (var item in ViewBag.Showings)
        {
            <tr>
                <td>@item.ShowingDate</td>
                <td>@item.SlobodnaMijesta</td>
                <td>@item.Cijena</td>
                <td>
                    <a class="btn btn-outline-dark" href="/Showing/CreateReservation/@item.ShowingID"> Select </a>
                </td>
                <td>
            </tr>
        }
    </table>
</div>


@section footer{
    <footer style="position:fixed; bottom:0;">
        &copy; MyETheatre 2022 - Theatre Add Play Page
    </footer>
}




